{
  "manifest_version": 3,
  "name": "Browser Relay",
  "version": "0.1.0",
  "description": "Relay bridge for LLM-orchestrated browser automation",
  "permissions": ["activeTab", "tabs", "scripting"],
  "host_permissions": [
    "http://localhost:18321/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {}
}
